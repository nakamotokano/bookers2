<h2>User info</h2>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
   <h3>名前 <%= @user.name %></h3>
  <% if @user == current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
Title<br>
<%= f.text_field :title %>
<br>Opinion<br>
<%= f.text_area :body %><br>

<%= f.submit 'Create Book' %>
<%end%>