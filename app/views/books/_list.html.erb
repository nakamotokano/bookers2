<!-- indexからの切り取り-->

 <div class="col-md-3">
<h2>User info</h2>

  <%= image_tag user.get_profile_image(100,100) %><br>
  <table class="table">
    <tbody><tr></tr>
  <tr>
	  <th>name</th>
	  <th> <%= user.name %><br></th></tr>
	  <tr>
	  <th>introduction</th>
	  
	  <th><%= user.introduction %></th>
  </tr>
</tbody></table>

<div class="row">
  <p class="btn btn-outline-secondary btn-block">
 <%= link_to edit_user_path(user) do %>
  <i class="fas fa-user-cog text-secondary" ></i>
 <%end%></p>
  </div>


<h2 class="mt-3">New book</h2>

<%= form_with model: book do |f| %>

<div class="form-group">
<br>Title<br>
<%= f.text_field :title %></div>

<div class="form-group">
<br>Opinion<br>
<%= f.text_area :body %><br>
 </div>
 
<div class="form-group">
<%= f.submit 'Create Book' ,class:"btn btn-success"%>
</div>
<%end%>
  </div>
